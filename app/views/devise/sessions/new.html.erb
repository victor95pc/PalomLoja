<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'login_panel'}) do |f| %>

    <div class="form-group">
      <%= f.text_field :username, class: 'form-control input-lg', placeholder: 'UsuÃ¡rio', autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: 'form-control input-lg', placeholder: 'Senha', autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'Lembrar-me' %>
        </div>
    <% end -%>

    <div class="btn-group" role="group" aria-label="...">
      <%= f.submit 'Logar', class: 'btn btn-primary btn-lg botao-grande' %>
      <%= link_to 'Cadastrar', new_registration_path(resource_name), class: 'btn btn-primary btn-lg botao-grande' %>
    </div>
<% end %>

